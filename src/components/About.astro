<style>
  .about-section {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 3rem;
    margin: 10rem auto;
    opacity: 0;
    transform: translateY(30px);
    transition:
      opacity 1s ease-out,
      transform 1s ease-out;
  }

  .about-section.fade-in {
    opacity: 1;
    transform: translateY(0);
  }

  @keyframes fadeInAbout {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .cards-container {
    display: flex;
    gap: 2rem;
    justify-content: space-between;
    flex-wrap: nowrap;
  }
  .card {
    background: rgb(var(--gray-light), 0.95);
    border-radius: 1rem;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 1.5rem 2rem;
    min-width: 260px;
    max-width: 350px;
    transition: box-shadow 0.2s;
    border: 1px solid rgb(var(--gray), 0.1);
  }
  .card:hover {
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.15);
    cursor: pointer;
    transform: scale(1.05);
    z-index: 2;
  }
  .card h4 {
    margin: 0 0 0.5rem 0;
    font-size: 1.2rem;
  }
  .card p {
    margin: 0;
    font-size: 1rem;
  }

  .more-services-btn {
    display: inline-block;
    margin: 0 auto 2rem auto;
    padding: 0.7em 2em;
    background: var(--accent, #0057b8);
    color: #fff;
    border-radius: 0.5em;
    text-decoration: none;
    font-weight: bold;
    font-size: 1.1rem;
    transition: background 0.2s;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }
  .more-services-btn:hover {
    background: var(--accent-dark, #003f7d);
  }

  @media (max-width: 768px) {
    .about-section {
      margin: 5rem auto;
    }
    .cards-container {
      flex-direction: column;
      align-items: center;
    }
    .card {
      width: 100%;
      padding: 0;
    }

    .card div {
      padding: 1.5rem 2rem;
    }
  }
</style>

<script>
  window.addEventListener("DOMContentLoaded", () => {
    const about = document.getElementById("about-section");
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            about?.classList.add("fade-in");
          } else {
            about?.classList.remove("fade-in");
          }
        });
      },
      { threshold: 0.2 },
    );

    if (about) {
      observer.observe(about);
    }
  });
</script>
